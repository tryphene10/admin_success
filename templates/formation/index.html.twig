{% extends 'layouts/base.html.twig' %}

{% block title %} {% endblock %}


{% block body %}

    <div class="fred">
        <h1 class="h3 text-primary text-center mt-5">
            {{ plurilaze(formations | length, 'Formation', 'Formations') }}
        </h1>
    </div>

    <div class="parents row d-flex">

        {% for formation in formations %}
           <div class="items col-3 bg-info m-3 text-center">
                
                <a href="{{ path('app_formation_details',  {id: formation.id} ) }}">
                <h2 class="h4 text-secondary">libelle: {{formation.name}}</h2>
                <h2 class="h4 text-secondary">price: {{formation.price}} xaf</h2>
                <h2 class="h4 text-secondary">status: {{formation.status}}</h2>
                </a>
                <span class="h6 mutted text-white">
                 {{formation.description}}
                    
                </span>
            
                
           </div>
        {% endfor %}
    </div>

{% endblock %}
