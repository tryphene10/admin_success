{% extends 'layouts/base.html.twig'%}
{% block title 'My admin dashboard page' %}

{% block body %}

    <body class="vertical-layout vertical-menu-modern 2-columns   menu-collapsed fixed-navbar" data-open="click" data-menu="vertical-menu-modern" data-col="2-columns">

      {{ include("layouts/partials/_header.html.twig") }}


      {{ include("layouts/partials/_menu.html.twig") }}

    <!-- BEGIN: Content-->
    <div class="app-content content">
      <div class="content-overlay"></div>
      <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body"><!-- Grouped multiple cards for statistics starts here -->
<div class="row grouped-multiple-statistics-card">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-lg-6 col-xl-3 col-sm-6 col-12">

            <div class="d-flex align-items-start mb-sm-1 mb-xl-0 border-right-blue-grey border-right-lighten-5">
              <a href="{{path('app_formation')}}">
              <span class="card-icon primary d-flex justify-content-center mr-3">
                <i class="fas fa-folder-open p-1 customize-icon font-large-2 p-1 shadow-sm rounded "></i>
              </span>
              </a>
              <div class="stats-amount mr-3">
              {% if formations|length >= 10 %}
                <h3 class="heading-text text-bold-600">{{ formations|length }}</h3>
              {% else %}
                <h3 class="heading-text text-bold-600">0{{ formations|length }}</h3>
              {% endif %}
                <p class="sub-heading">Mes Formations</p>
              </div>
              <span class="inc-dec-percentage">
                <small class="success"><i class="fas fa-arrow-alt-circle-up"></i> 15</small>
              </span>
            </div>

          </div>
          <div class="col-lg-6 col-xl-3 col-sm-6 col-12">
            <div class="d-flex align-items-start mb-sm-1 mb-xl-0 border-right-blue-grey border-right-lighten-5">
              <span class="card-icon danger d-flex justify-content-center mr-3">
                <i class="fas fa-file-invoice-dollar p-1 customize-icon font-large-2 p-1 shadow-sm rounded"></i>
              </span>
              <div class="stats-amount mr-3">
              {% if invoices|length >= 10 %}
                <h3 class="heading-text text-bold-600">{{ invoices|length }}</h3>
              {% else %}
                <h3 class="heading-text text-bold-600">0{{ invoices|length }}</h3>
              {% endif %}
                <p class="sub-heading">Invoices</p>
              </div>
              <span class="inc-dec-percentage">
                <small class="danger"><i class="fas fa-arrow-alt-circle-down"></i> 05</small>
              </span>
            </div>
          </div>
          <div class="col-lg-6 col-xl-3 col-sm-6 col-12">
            <div class="d-flex align-items-start border-right-blue-grey border-right-lighten-5">
              <span class="card-icon success d-flex justify-content-center mr-3">
                <i class="fas fa-users p-1 customize-icon font-large-2 p-1 shadow-sm rounded"></i>
              </span>
              <div class="stats-amount mr-3">
              {% if customers|length >= 10 %}
                <h3 class="heading-text text-bold-600">{{ customers|length }}</h3>
              {% else %}
                <h3 class="heading-text text-bold-600">0{{ customers|length }}</h3>
              {% endif %}
                <p class="sub-heading">Customers</p>
              </div>
              <span class="inc-dec-percentage">
                <small class="success"><i class="fas fa-arrow-alt-circle-left"></i> 415</small>
              </span>
            </div>
          </div>
          <div class="col-lg-6 col-xl-3 col-sm-6 col-12">
            <div class="d-flex align-items-start">
              <a href="{{ path('app_category_create') }}">
              <span class="card-icon warning d-flex justify-content-center mr-3">
                <i class="fas fa-layer-group p-1 customize-icon font-large-2 p-1 shadow-sm rounded"></i>
              </span>
               </a>
              
              <div class="stats-amount mr-3">
              {% if categories|length >= 10 %}
                <h3 class="heading-text text-bold-600">{{ categories|length }}</h3>
              {% else %}
                <h3 class="heading-text text-bold-600">0{{ categories|length }}</h3>
              {% endif %}
                <p class="sub-heading">Category</p>
              </div>
             

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Grouped multiple cards for statistics ends here -->

<!-- friends & weather charts -->
<div class="row match-height">
  <div class="col-xl-4 col-lg-6 col-md-12">
      <div class="card">
          <div class="card-content">
              <div class="card-body">
                  <h4 class="card-title">Category of Formations</h4>
                  <p class="card-text">Some quick example text to build on the card.</p>
              </div>
              <ul class="list-group list-group-flush">
              {% for category in categories %}
                <li class="list-group-item">
                    <span class="badge badge-pill bg-primary float-right">{{category.id}}</span> {{category.name}}
                </li>
              {% endfor %}
              </ul>
              <div class="card-body">
                  <a href="{{ path('app_category_create')}}" class="card-link"><i class="fas fa-plus-circle"></i> New category</a>
              </div>
          </div>
      </div>
  </div>

  <div class="col-xxl-6 col-xl-8 col-lg-8 col-md-12 col-12 power-consumption-stats-chart">
    <div class="card">
      <div class="card-content pt-2 px-1">
        <div class="row">
          <div class="col-8 d-flex">
            <div class="ml-1">
              <h4 class="power-consumption-stats-title text-bold-500">Power consumption</h4>
            </div>
            <div class="ml-50 mr-50">
              <p>(kWh/100km)</p>
            </div>
          </div>
          <div class="col-4 d-flex justify-content-end pr-3">
            <div class="dark-text">
              <h5 class="power-consumption-active-tab text-bold-500">Week</h5>
            </div>
            <div class="light-text ml-2">
              <h5>Month</h5>
            </div>
          </div>
        </div>
        <div id="spline-chart"></div>
      </div>
    </div>
  </div>
      
</div>
<!-- friends & weather charts -->
<!--stats-->
<div class="row">
  <div class="col-xl-3 col-lg-6 col-12">
      <div class="card">
          <div class="card-content">
              <div class="card-body">
                  <div class="media">
                      <div class="media-body text-left w-100">
                          <h3 class="primary">78%</h3>
                          <span>New Session</span>
                      </div>
                      <div class="media-right media-middle">
                          <i class="icon-user-follow primary font-large-2 float-right"></i>
                      </div>
                  </div>
                  <div class="progress progress-sm mt-1 mb-0">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="col-xl-3 col-lg-6 col-12">
      <div class="card">
          <div class="card-content">
              <div class="card-body">
                  <div class="media">
                      <div class="media-body text-left w-100">
                          <h3 class="danger">423</h3>
                          <span>Total Visits</span>
                      </div>
                      <div class="media-right media-middle">
                          <i class="icon-social-dropbox danger font-large-2 float-right"></i>
                      </div>                        
                  </div>
                  <div class="progress progress-sm mt-1 mb-0">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 40%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="col-xl-3 col-lg-6 col-12">
      <div class="card">
          <div class="card-content">
              <div class="card-body">
                  <div class="media">
                      <div class="media-body text-left w-100">
                          <h3 class="success">64.89 %</h3>
                          <span>Bounce Rate</span>
                      </div>
                      <div class="media-right media-middle">
                          <i class="icon-layers success font-large-2 float-right"></i>
                      </div>                        
                  </div>
                  <div class="progress progress-sm mt-1 mb-0">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 60%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="col-xl-3 col-lg-6 col-12">
      <div class="card">
          <div class="card-content">
              <div class="card-body">
                  <div class="media">
                      <div class="media-body text-left w-100">
                          <h3 class="warning">02.12</h3>
                          <span>Session Duration</span>
                      </div>
                      <div class="media-right media-middle">
                          <i class="icon-globe warning font-large-2 float-right"></i>
                      </div>                        
                  </div>
                  <div class="progress progress-sm mt-1 mb-0">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: 35%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
<!--/stats-->

<!-- active users and my task timeline cards ends here -->
        </div>
      </div>
    </div>
    <!-- END: Content-->


    <!-- BEGIN: Footer-->
    <footer class="footer footer-static footer-light navbar-border">
      <p class="clearfix blue-grey lighten-2 text-sm-center mb-0 px-2">
        <span class="float-md-left d-block d-md-inline-block">Copyright  &copy; 2021 
          <a class="text-bold-800 grey darken-2" href="#" target="_blank">Gilgamesh</a>
        </span>
      </p>
    </footer>
  </body>  
{% endblock %}

