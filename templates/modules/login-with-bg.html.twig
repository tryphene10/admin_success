{% extends 'layouts/base.html.twig'%}
{% block title 'My admin login page' %}

{% block body %}
  <body class="vertical-layout vertical-menu-modern 1-column  bg-cyan bg-lighten-2 menu-collapsed blank-page blank-page" data-open="click" data-menu="vertical-menu-modern" data-col="1-column">
    <!-- BEGIN: Content-->
    <div class="app-content content">
      <div class="content-overlay"></div>
      <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body"><section class="row flexbox-container">
    <div class="col-12 d-flex align-items-center justify-content-center ">
        <div class="col-lg-4 col-md-8 col-10 box-shadow-2 p-0">
            <div class="card border-grey border-lighten-3 m-0">
                <div class="card-header border-0">
                    <div class="card-title text-center">
                        <div class="p-1"><img src="../../../app-assets/images/logo/stack-logo-dark.png"
                                alt="branding logo"></div>
                    </div>
                    <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-2"><span>Easily
                            Using</span></h6>
                </div>
                <div class="card-content round">
                    <div class="card-body pt-0 text-center">
                        <a href="#" class="btn btn-social mb-1 mr-1  btn-outline-facebook">
                            <span class="fab fa-facebook"></span> 
                            <span class="px-1">facebook</span> 
                        </a>
                        <a href="#" class="btn btn-social mb-1 mr-1 btn-outline-google">
                            <span class="fab fa-google-plus font-medium-4">
                            </span> <span class="px-1">google</span> 
                        </a>
                    </div>
                    <p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2"><span>OR Using
                            Account Details</span></p>
                    <div class="card-body pt-0">

                        <form class="form-horizontal" action="/user-connect" methods="POST">
                            <fieldset class="form-group floating-label-form-group">
                                <label for="user-name">Your Username</label>
                                <input type="text" name="username" class="form-control form-control-lg" id="user-name" placeholder="Your Username">
                            </fieldset>
                            <fieldset class="form-group floating-label-form-group mb-1">
                                <label for="user-password">Enter Password</label>
                                <input type="password" name="password" class="form-control form-control-lg" id="user-password"
                                    placeholder="Enter Password">
                            </fieldset>
                            <div class="form-group row">
                                <div class="col-sm-6 col-12 text-center text-sm-left">
                                    <fieldset>
                                        <input type="checkbox" id="remember-me" class="chk-remember">
                                       <label for="remember-me"> Remember Me</label> 
                                    </fieldset>
                                </div>
                                <div class="col-sm-6 col-12 float-sm-left text-center text-sm-right"><a
                                        href="recover-password.html" class="card-link">Forgot Password?</a></div>
                            </div>
                            <div class="container row">
                                
                                    <button type="submit" class="col-lg-8 col-12 mx-auto btn btn-outline-secondary btn-block btn-lg"
                                         <i class="fab fa-sign-in-alt"></i> Login 

                                    </button>
                                
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
        </div>
      </div>
    </div>

  </body>
  {% endblock %}
